@model tbstudent
@{
    Layout="AdminLTE/_Layout";
    ViewData["Title"] = "Create Student";
    ViewData["MenuActive"] = new string[]{ Url.Action("Index", "Student") };
    ViewData["Breadcrumb"] = new List<Breadcrumb>(){
        new Breadcrumb{
            Can = "",  Icon = "bi bi-house-door",
            Link = @Url.Action("Index", "Home"), Name = "Home",
            Class = "", Target="", Active=false
        },
        new Breadcrumb{
            Can = "",  Icon = "bi bi-person-badge",
            Link = @Url.Action("Index", "Student"), Name = "Student",
            Class = "", Target="", Active=false
        },
        new Breadcrumb{
            Can = "",  Icon = "bi bi-person-plus",
            Link = @Url.Action("FormShow", "Student"), Name = "Student Detail",
            Class = "", Target="", Active=true
        }
    };

}

<div class="card card-primary card-outline " can="">
    <div class="card-header ">
        <h3 class="card-title"> <i class="bi bi-person-circle"></i> Student Detail </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="bi bi-dash-lg"></i>
                <i class="bi bi-plus-lg"></i>
            </button>
        </div>
    </div>
    <div class="card-body"> 
        <form action="@Url.Action("Delete", "Student")" method="post" class="form-loading">
            <input type="hidden" name="id" value="@Model.id">
            
            <table id="table-student-detail" class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>IMG</th>
                        <td class="text-left" colspan="3"><img src="@Url.Content($"~/fileservice/fileUploads/{Model.img}")" style="width: 60px;" alt=""></td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td colspan="3">@Model.name</td>
                    </tr>
                    <tr>
                        <th>Gender</th>
                        <td class="">@Model.gender</td>

                        <th>Address</th>
                        <td class="">@Model.address</td>
                    </tr>
                    <tr>
                        <th>Class</th>
                        <td class="">@Model.class_room</td>

                        <th>Active Date</th>
                        <td class="">@Helper.DateToString(Model.active_date, "th")</td>
                    </tr>
                    <tr>
                        <th>CreateBy</th>
                        <td class="">@Model.create_by</td>

                        <th>CreateDate</th>
                        <td class="">@Helper.DateToString(Model.create_date, "th")</td>
                    </tr>

                    <tr>
                        <td colspan="4">
                            <h4>Portfolio</h4>
                            @Html.Raw(Model.portfolio)
                        </td>
                    </tr>
                    <tr>
                        <td>Signature</td>
                        <td colspan="3">
                            <img src="@Url.Content($"~/fileservice/signatures/{Model.signature}")" style="height: 60px;" alt="">
                        </td>
                    </tr>
                    
                </tbody>
            </table>

            <div class="text-center">
                <a href="@Url.Action("Index","Student")" class="btn btn-secondary" > <i class="bi bi-arrow-left"></i> Back </a>
                <button class="btn btn-danger" onclick="return confirm('ยืนยันการลบข้อมูลนี้?');" type="submit"> <i class="bi bi-save"></i> Delete Data </button>
                <a href="@Url.Action("FormEdit","Student", new { id=Model.id })" class="btn btn-warning" > <i class="bi bi-pencil-square"></i> Edit </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
    </script>
}


@section Styles {
    <style>
        #table-student-detail th{
            min-width: 130px;
            width: 130px;
        }
    </style>
}