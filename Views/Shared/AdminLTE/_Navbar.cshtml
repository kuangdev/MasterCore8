@{
    string publshMode = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT");
}
<!-- navbar -->
<nav class="main-header navbar navbar-expand navbar-ligth py-0 pl-0">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link sidebar-toggle" data-widget="pushmenu" href="#" role="button">
                <i class="bi bi-list h5"></i></a>
        </li>
        @if(publshMode == "Development" || publshMode == "Test"){
            <li class="nav-item">
                <b class="nav-link text-uppercase text-warning text-bold h5 px-1 pb-0"> [ @publshMode ] </b>
            </li>
        }
    </ul>



    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">


        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
               <i class="bi bi-file-earmark-text"></i> Manual
            </a>
            <div class="dropdown-menu dropdown-menu-right" style="left: inherit; right: 0px;">
                <a href="javascript:void(_helper.popup('@Url.Content("~/documents/ConvertExcelToXLSX.pdf")','ConvertExcelToXLSX','1000','600'))" class="dropdown-item">
                    <i class="bi bi-file-earmark-pdf"></i> Convert Excel ( .xlsx )
                </a>
            </div>
        </li>

        <li class="nav-item dropdown user-menu">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <img src="@ViewBag.UserImg" class="user-image img-circle elevation-2" alt="User Image">
                <span class="d-none d-md-inline-block">@User.FindFirst("id").Value : @User.Identity.Name</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <!-- User image -->
                <div id="nav-user-info">
                    <div class="user-header">
                        <img src="@ViewBag.UserImg" class="img-rounded" alt="User Image" style="height:100px;">

                        <p class="mt-2">
                            <span class="d-block">@User.Identity.Name</span>
                            <small>
                                EMP No. : @User.FindFirst("id").Value
                            </small>
                        </p>
                    </div>
                    <!-- Menu Body -->
                    <div class="user-body">
                        <div class="row">
                            <div class="col-12 small text-left">
                                @(User.FindFirst("roles").Value ?? "")
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                </div>
                <!-- Menu Footer-->
                <div class="user-footer justify-content-between">
                    @* <a href="#" class="btn btn-default btn-flat text-info"
                        title="ดูข้อมูล"> <i class="bi bi-info-circle"></i> <span class="small">โปรไฟล์</span></a> *@
                    <a href="javascript:void(0)" onclick="$('#modal-resetpassword').modal('show');"
                        class="btn btn-default btn-flat text-orange" title="Change Password"> <i class="bi bi-key"></i>
                        <span class="small">Change Password</span></a>
                    <a href="javascript:void(0)" onclick="$('#form-logout').submit();"
                        class="btn btn-default btn-flat float-right" title="Logout"> <i
                            class="bi bi-box-arrow-right"></i> <span class="small">Logout</span></a>
                </div>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->